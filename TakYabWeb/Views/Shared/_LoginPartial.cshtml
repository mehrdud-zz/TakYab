@if (Request.IsAuthenticated)
{
    <text>
        <div>
            <a data-toggle="modal" data-target="#myModal" href="~/Account/Manage/">@(User.Identity.Name)</a>
        </div>

        @using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
        {
            @Html.AntiForgeryToken()
            <span>[</span><a href="javascript:document.getElementById('logoutForm').submit()">خروج</a><span>]</span>
        }

    </text>

}
else
{
  
    <a href="~/Account/Login/">ورود و ثبت نام</a>

}


