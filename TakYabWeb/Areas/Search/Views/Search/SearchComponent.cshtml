                <input type="hidden" value="" name="priceRangeHidden" id="priceRangeHidden" />
                <div class="dropdown">
                    <button class="btn btn-takyab dropdown-toggle @(Model.PriceRangeId != Guid.Empty ? "selectedButton" :  String.Empty)" type="button" id="priceRangeDropDownMenu" name="priceRangeDropDownMenu" data-toggle="dropdown">
                        <span class="title">@(Model.PriceRangeId != Guid.Empty ? Model.PriceRange : "قیمت -> همه")</span>
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="priceRangeDropDownMenu">
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#" onclick="selectThis('', 'priceRangeDropDownMenu', 'قیمت -> همه');">همه</a></li>
                        @foreach (var item in Model.PriceRangeList)
                        {
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#" onclick="selectThis('@item.PriceRangeId','priceRangeDropDownMenu','priceRangeHidden','@(item.Name)');">@(item.Name)</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="searchItem">
                <input type="hidden" value="" name="adTypeHidden" id="adTypeHidden" />
                <div class="dropdown">
                    <button class="btn btn-takyab dropdown-toggle @(Model.AdTypeId != Guid.Empty ? "selectedButton" :  String.Empty)" type="button" id="adTypeDropDownMenu" data-toggle="dropdown">
                        <span class="title">@(Model.AdTypeId != Guid.Empty ? Model.AdType : "نوع آگهی -> همه")</span>
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu" aria-labelledby="adTypeDropDownMenu">
                        <li role="presentation"><a role="menuitem" tabindex="-1" href="#" onclick="selectThis('', 'adTypeDropDownMenu', 'adTypeHidden', 'نوع آگهی -> همه');">همه</a></li>
                        @foreach (var item in Model.AdTypeList)
                        {
                            <li role="presentation"><a role="menuitem" tabindex="-1" href="#" onclick="selectThis('@item.AdTypeId', 'adTypeDropDownMenu','adTypeHidden','@(item.Name)');">@(item.Name)</a></li>
                        }
                    </ul>
                </div>
            </div>
            <div class="searchItem">
                <input type="submit" value="جستجو" class="btn btn-takyab btnSearch dropdown-toggle" />
                 
                <input type="button" value="جستجوی مجدد" onclick="javascript:resetSearch();" class="btn btn-takyab btnSearch dropdown-toggle" />

            </div>

        </div>
    </form>
</div>

<script type="text/javascript">
    function selectThis(itemId, dropDownId, hiddenControlId, itemName) {
        $("#" + dropDownId + " .title").html(itemName);
        $("#" + dropDownId + " .title").attr("selectedValue", itemId);

        $("#" + hiddenControlId).val(itemId);

        if (itemId == "") {
            $("#" + dropDownId).removeClass("selectedButton");
        }
        else {
            $("#" + dropDownId).addClass("selectedButton");
        }
    }

    $(document).ready(function () {

    });
</script>
