@using GridMvc.Html

@model TakYab.Areas.Search.Controllers.SearchCriteriaLight
@{
    ViewBag.Title = "SearchResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="display:inline-block;min-height:500px;vertical-align:top;width:100%;    padding: 0 20px 0 0;">
    <div style="display:inline-block;vertical-align:top;padding:0 0 0 10px;width:390px;">
        @Html.Action("SearchComponentNew")
    </div>
    <div style="display:inline-block;vertical-align:top; min-width:60%;">
        <div class="panel panel-default">

            @Html.Grid(Model.LightCarsList).Columns(columns =>
           {
               columns.Add(foo => foo.ModelName).Titled("مدل خودرو").Sortable(true);
               columns.Add(foo => foo.Price).Titled("قیمت").Sortable(true);
               columns.Add(foo => foo.Province).Titled("استان").Sortable(true);
               columns.Add().Encoded(false).Sanitized(false).RenderValueAs(ad => @<img src="~/Content/Images/@ad.FirstImage/Thumbnail.png" />);
               columns.Add().Encoded(false).Sanitized(false).RenderValueAs(ad => @<div><a href="/Ads/Car/Edit/@ad.CarId">ویرایش</a><span>&nbsp;|&nbsp;</span><a href="/Ads/Car/Details/@ad.CarId">مشاهده آگهی</a><span>&nbsp;|&nbsp;</span><a href="/Ads/Car/Delete/@ad.CarId">حذف</a></div>);
           }).WithPaging(10)
        </div>
    </div>
</div>