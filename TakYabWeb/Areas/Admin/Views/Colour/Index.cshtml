@using GridMvc.Html
@model IEnumerable<DataLayer.Colour>

@{
    ViewBag.Title = "رنگ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
 
<p>
    <a href="../Create">
        <span class="glyphicon glyphicon-plus"></span><span class="createNew">رنگ جدید</span>
    </a>
</p>
 

@Html.Grid(Model).Columns(columns =>
           {
               columns.Add(foo => foo.Name).Titled("رنگ").Sortable(true);
               columns.Add(foo => foo.SortOrder).Titled("ترتیب").Sortable(true);
               columns.Add().Encoded(false).Sanitized(false).RenderValueAs(ad => @<div>
                <a href="/Admin/Colour/Edit/@ad.ColourId">ویرایش</a><span>&nbsp;|&nbsp;</span>
                <a href="/Admin/Colour/Details/@ad.ColourId">مشاهده</a><span>&nbsp;|&nbsp;</span>
                <a href="/Admin/Colour/Delete/@ad.ColourId">حذف</a>
            </div>);
           }).Sortable()
