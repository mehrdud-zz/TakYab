@using GridMvc.Html
@model IEnumerable<DataLayer.SubModel>

@{
    ViewBag.Title = "مدل خودرو";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<p>
    <a href="../Create">
        <span class="glyphicon glyphicon-plus"></span><span class="createNew">مدل خودرو جدید</span>
    </a>
</p>

@Html.Grid(Model).Columns(columns =>
           {
               columns.Add(foo => foo.Name).Titled("مدل خودرو").Sortable(true);
               columns.Add(foo => foo.SortOrder).Titled("ترتیب").Sortable(true);
               columns.Add().Encoded(false).Sanitized(false).RenderValueAs(ad => @<div>
                <a href="/Admin/SubModel/Edit/@ad.SubModelId">ویرایش</a><span>&nbsp;|&nbsp;</span>
                <a href="/Admin/SubModel/Details/@ad.SubModelId">مشاهده</a><span>&nbsp;|&nbsp;</span>
                <a href="/Admin/SubModel/Delete/@ad.SubModelId">حذف</a>
            </div>);
           }
        ).Sortable()
