@model IEnumerable<DataLayer.Car>

@if (Model.Count() > 0)
{
    <div id="carCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @{var i = "active";
            var counter = 0;}
            @foreach (DataLayer.Car item in Model)
            {


                <li data-target="#carCarousel" data-slide-to="@(counter)" class="@(i)"></li>

                i = "";
                counter++;


            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            @{ i = "active";}
            @foreach (DataLayer.Car item in Model)
            {
                <div class="item @(i)" style="text-align:center;">

                    <img src="Content/Images/@(item.FirstImage)/Large.png" alt="@(item.Name) " />
                    <div class="carousel-caption">
                        <h4>@(item.Name)</h4>
                        <p>@(item.Description)</p>
                    </div>
                </div>

                @(i = "")
            }
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="right carousel-control" href="#carCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
}