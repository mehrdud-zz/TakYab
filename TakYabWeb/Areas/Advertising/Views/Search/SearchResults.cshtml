@using GridMvc.Html

@model TakYab.Areas.Advertising.Controllers.SearchCriteriaLight
@{
    ViewBag.Title = "SearchResults";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="display:inline-block;width:100%;min-height:500px;vertical-align:top;">
    <div style="min-width:300px;width:20%; display:inline-block;vertical-align:top;padding:0 0 0 10px;">
        @Html.Action("SearchComponent")
    </div>
    <div style="min-width:300px;width:75%;display:inline-block;vertical-align:top;">
        <div class="panel panel-default">

            @Html.Grid(Model.LightCarsList).Columns(columns =>
           {
               columns.Add(foo => foo.ModelName).Titled("مدل خودرو").Sortable(true).Filterable(true);
               columns.Add(foo => foo.Price).Titled("قیمت").Sortable(true).Filterable(true);
               columns.Add(foo => foo.Province).Titled("استان").Sortable(true).Filterable(true);
               columns.Add().Encoded(false).Sanitized(false).RenderValueAs(ad => @<img src="~/Content/Images/@ad.FirstImage/Thumbnail.jpg" />);
               columns.Add().Encoded(false).Sanitized(false).RenderValueAs(ad => @<div><a href="/Ads/Car/Edit/@ad.CarId">ویرایش</a><span>&nbsp;|&nbsp;</span><a href="/Ads/Car/Details/@ad.CarId">مشاهده آگهی</a><span>&nbsp;|&nbsp;</span><a href="/Ads/Car/Delete/@ad.CarId">حذف</a></div>);
           }
                                                  ).WithPaging(50).Sortable().Filterable().WithMultipleFilters()


        </div>
    </div>
</div>