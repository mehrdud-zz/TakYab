@model IEnumerable<DataLayer.Car>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    @Html.ActionLink("Create New", "Create")
</p>


<div class="panel panel-default">
    <table class="table table-condensed carList">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.SubModelId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProvinceId)
            </th>
            <th>

            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr class="@((item.AdStatus != null) ? item.AdStatus.CssCode : "")">

                <td>
                    @Html.DisplayFor(modelItem => item.SubModel.Model.Name) -> @Html.DisplayFor(modelItem => item.SubModel.Name) 
                </td>
                <td>@Html.DisplayFor(modelItem => item.BuildYear.Name)</td>
                <td>

                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Province.Name)
                </td>
                <td>

                    <img src="~/Content/Images/@(item.CarId)/ImageURI1/Original.jpg" />

                </td>

                <td style="text-align:center;">

                    @Html.ActionLink("ویرایش", "Edit", new { id = item.CarId }) |
                    @Html.ActionLink("مشاهده آگهی", "Details", new { id = item.CarId }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.CarId })
                </td>
            </tr>
        }

    </table>
</div>